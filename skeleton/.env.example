# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# LiteLLM Configuration
LITELLM_MASTER_KEY=your-master-key-here

# Azure OpenAI Configuration
AZURE_API_BASE=https://your-azure-openai.openai.azure.com/
AZURE_API_KEY=your-azure-api-key
AZURE_API_VERSION=2024-02-15-preview

# AWS Bedrock Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# OpenAI Configuration (fallback)
OPENAI_API_KEY=your-openai-api-key

{%- if values.enablePostgreSQL %}
# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/${{ values.name }}
{%- endif %}

{%- if values.enableRedis %}
# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
{%- endif %}

{%- if values.enableAuth %}
# Authentication Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_AUDIENCE=https://your-llm-gateway-api
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
{%- endif %}

# Service Configuration
SERVICE_NAME=${{ values.name }}
SERVICE_PORT=${{ values.port }}
SERVICE_HOST=0.0.0.0

# Monitoring Configuration
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Rate Limiting
DEFAULT_TPM_LIMIT=10000
DEFAULT_RPM_LIMIT=1000
DEFAULT_MAX_BUDGET=100.0
DEFAULT_BUDGET_DURATION=30d
